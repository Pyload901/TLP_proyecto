bool flag = true;

void proc loop() start
  int izquierda = exec readLeftSensor();
  int derecha = exec readRightSensor();
  if (izquierda == 0 and derecha == 0 and flag == true) start
    exec forward_ms(0);
    flag = false;
  end
  else
  start
    if (izquierda == 1 and derecha == 1 and flag == false) start
        exec back_ms(0);
        flag = false;
    end
  end
end

